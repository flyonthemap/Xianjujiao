<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xidian.xianjujiao.com.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/main_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/menu1_drawable_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="头条"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/menu2_drawable_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="聚焦"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:layout_marginBottom="-10dp"
            android:button="@null"
            android:drawableTop="@drawable/menu5_drawable_selector"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/menu3_drawable_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="直播"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/menu4_drawable_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="我"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp" />

    </RadioGroup>
</LinearLayout>
