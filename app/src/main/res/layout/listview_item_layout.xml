<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding= "5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/headline_iv"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/product_default"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headline_news_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:maxLines="2"
                android:textColor="@color/text_black"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
                android:ellipsize="end"
                android:textSize="16sp" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/stick"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/headline_btn"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/headline_news_type"
                    android:layout_alignTop="@+id/headline_news_type"
                    android:textColor="@color/fab_material_blue_500"
                    android:text="置顶" />

                <TextView

                    android:id="@+id/headline_news_type"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/headline_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/fab_material_blue_500"
                    android:text="视频新闻" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>