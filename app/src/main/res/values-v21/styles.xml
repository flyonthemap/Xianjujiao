<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey700</item>
        <item name="colorPrimaryDark">@color/grey700</item>
        <item name="colorAccent">@color/fab_material_grey_500</item>
        <item name="android:textColor">#000</item>
        <item name="android:editTextColor">#000</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textColorPrimary">?android:attr/colorForegroundInverse</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/vpi__bright_foreground_disabled_holo_light</item>
        <item name="android:navigationBarColor">@color/default_underline_indicator_selected_color
        </item>
    </style>
    <style name="loadingDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <style name="myProgressBarStyleLarge">
        <item name="android:indeterminateDrawable">@drawable/rotate_loading_icon</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:maxWidth">50dip</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

</resources>